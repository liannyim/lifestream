<style>
    
    .story-block-img{
        width: 100%;
        height:100%;
        background-image: url({{ block.settings.image | img_url: 'master' }});
        background-size: cover;
        background-position: 100% 100%;
        background-repeat: no-repeat;
    }
    {% if collection_primaryColor != blank %}
    .wrapper-{{ collection_id }}{
        background: {{ collection_primaryColor }};
    }
    .story-block-content-details p
    {
        color: {{ collection_primaryColor }};
        filter: brightness(0.6);
    }

    #story-block .wrapper-{{ collection_id }} a.btn-theme{
        min-width: 228px;
        background-color: #FFFFFF;
        color: {{ collection_primaryColor }};
    }
    {% else %}
    .wrapper-{{ collection_id }}{
        background: #418656;
    }
    .story-block-content-details p
    {
        color: #418656;
        filter: brightness(0.6);
    }
    #story-block .wrapper-{{ collection_id }} a.btn-theme{
        min-width: 228px;
        background-color: #FFFFFF;
        color: #418656;
    }
    #story-block .wrapper-{{ collection_id }} a.btn-theme:hover{
        background-color: #FFFFFF;
        color: #FEFEFE;
    }
    #story-block .wrapper-{{ collection_id }} a.btn-theme:hover{
        color: #FEFEFE;
    }
    {% endif %}
    


</style>
<div class="section-block" id="story-block">
    <div class="story-block-img-wrapper">
        <div class="story-block-img"></div>
    </div>
    <div class="story-block-content wrapper-{{ collection_id }}">
        <div class="story-block-content-details">
            {% if block.settings.top_title != blank %}
                <p class="subtop">{{ block.settings.top_title }}</p>
            {% endif %}
            {% if block.settings.heading != blank %}
                <h3 class="heading">
                    {{ block.settings.heading }}
                </h3>
            {% endif %}
            {% if block.settings.description != blank %}
                <p class="desc">
                    {{ block.settings.description }}
                </p>
            {% endif %}

            {% if block.settings.button_link != blank or block.settings.button_label != blank %}
            <a href="{{block.settings.button_link }}" class="btn gradient-theme btn-theme" >
                <span>{{block.settings.button_label }}</span>
              </a>
            {% endif %}
        </div>
    </div>
</div>